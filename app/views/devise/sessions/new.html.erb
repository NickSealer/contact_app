<div class="container py-5">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
      <div class=" card-header">
        <h3>Log in</h3>
        <div class="d-flex justify-content-end">
          <%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-outline-info', title: "Sign up" %>
				</div>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="card-body">
        <form>
          <div class="input-group form-group">
						<div class="input-group-prepend">
						</div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "email", required: true %>
					</div>
          <div class="input-group form-group">
						<div class="input-group-prepend">
						</div>
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder: "password", required: true %>
					</div>
          <div class="align-items-center" style="text-align: center;">
            <%= f.check_box :remember_me, class: "align-items-center" %>
            <%= f.label :remember_me %>
          </div>
          <div class="d-flex justify-content-center">
            <%= f.submit "Log in", class:"btn btn-outline-success" %>
					</div>
        </form>
      </div>
      <%= link_to "Forgot your password?", new_password_path(resource_name), style: "color: white;", class: "d-flex justify-content-center" %>
      <% end %>
    </div>
  </div>
</div>
